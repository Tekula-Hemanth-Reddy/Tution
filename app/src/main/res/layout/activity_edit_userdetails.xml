<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserdetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="75dp">
                <ImageView
                    android:id="@+id/etusrprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person_black" />

            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/etusrname"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Full Name"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/etusrmail"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/etusrphno"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Phone no"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/etusrplace"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Place"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/etusrcp"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Current Position"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/etsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="250dp"
                android:layout_marginLeft="20dp"
                android:text="Save"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>