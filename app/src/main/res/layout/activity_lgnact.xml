    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="Log In"/>
    <Button
